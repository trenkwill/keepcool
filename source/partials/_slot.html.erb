
<% if type == "encours" %>
  <div class="slot" style="background-image: linear-gradient(rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('<%= asset_url "img-content/gym-7.png" %>');">
    <a href="/mire/cuisses-fessiers.html" class="slot__link"></a>
    <div class="slot__schedule slot__schedule--pink">En cours</div>
    <div class="slot__title">Cuissses fessiers</div>
    <div class="slot__time time">
      <div class="js-countdown-1"
      data-size="64"
      >
        <div class="inner">
          <div>
            <div class="time">13</div>
          </div>
        </div>
      </div>
    </div>
    <div class="slot__difficulty">
      <span class="difficulty-icon difficulty-icon--pink-2 difficulty-icon__level-3">
        <%= inline_svg("difficulty") %>
      </span>
    </div>
  </div>
<% end %>

<% if type == "fin-cours" %>
  <div class="slot slot--fin-cours" style="background-image: linear-gradient(rgba(224,0,105,0.68) 0%, rgba(224,0,105,0.68) 50%), url('<%= asset_url "img-content/gym-7.png" %>');">

    <div class="slot__schedule slot__schedule--pink">Fin du cours</div>
    <div class="slot__title">Cuissses fessiers</div>
    <div class="slot__time time">
      <div class="js-countdown-1"
      data-size="85"
      >
        <div class="inner">
          <div>
            <div class="time">00:24</div>
          </div>
        </div>
      </div>
    </div>
    <div class="slot__difficulty">
      <span class="difficulty-icon difficulty-icon--pink-2 difficulty-icon__level-3">
        <%= inline_svg("difficulty") %>
      </span>
    </div>
  </div>
<% end %>

