    <script>

      $('.js-countdown-1').circleProgress({
        startAngle: -Math.PI / 4 * 2,
        value: 0.25,
        thickness: 7,
        lineCap: 'round',
        fill: {
          gradient: ["#CE2D69", "#CE2D69"]
        }
      });

      $('.js-countdown-2').circleProgress({
        startAngle: -Math.PI / 4 * 2,
        value: 0.25,
        thickness: 7,
        lineCap: 'round',
        emptyFill: "rgba(255, 255, 255, .5)",
        fill: {
          gradient: ["#E3E4E5", "#fff"]
        }
      });
    </script>
  </body>
</html>
